@model IEnumerable<ERP_GMEDINA.Models.tbDeduccionesExtraordinarias>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>tbDeduccionesExtraordinarias</h2>
        <ol class="breadcrumb">
            <li class="active">
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="float-e-margins">
                <div class="ibox-title">
                    <h5>Listado de tbDeduccionesExtraordinarias</h5>
                    <div class="ibox-tools">
                       @Html.ActionLink("Registrar tbDeduccionesExtraordinarias", "Create", null, new { @class = "btn btn-primary btn-xs"})
                    </div>
                </div>
                <div class="ibox-content">
                  <table class="table table-striped table-bordered table-hover dataTables-example" id="IndexTable">
                    <thead>
                        <tr role="row">
                            <th>@Html.DisplayNameFor(model => model.dex_MontoInicial)</th>
                            <th>@Html.DisplayNameFor(model => model.dex_MontoRestante)</th>
                            <th>@Html.DisplayNameFor(model => model.dex_ObservacionesComentarios)</th>
                            <th>@Html.DisplayNameFor(model => model.dex_Cuota)</th>
                            <th>@Html.DisplayNameFor(model => model.dex_FechaCrea)</th>
                            <th>@Html.DisplayNameFor(model => model.dex_FechaModifica)</th>
                            <th>@Html.DisplayNameFor(model => model.dex_Activo)</th>
                            <th>@Html.DisplayNameFor(model => model.tbUsuario.usu_NombreUsuario)</th>
                            <th>@Html.DisplayNameFor(model => model.tbUsuario1.usu_NombreUsuario)</th>
                            <th>@Html.DisplayNameFor(model => model.tbCatalogoDeDeducciones.cde_DescripcionDeduccion)</th>
                            <th>@Html.DisplayNameFor(model => model.tbEquipoEmpleados.eqem_RazonInactivo)</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                      @foreach (var item in Model) {
                        <tr class="gradeA odd" role="row" data-id="@item.dex_IdDeduccionesExtra">
                            <td>
                                @Html.DisplayFor(modelItem => item.dex_MontoInicial)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.dex_MontoRestante)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.dex_ObservacionesComentarios)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.dex_Cuota)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.dex_FechaCrea)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.dex_FechaModifica)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.dex_Activo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tbUsuario.usu_NombreUsuario)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tbUsuario1.usu_NombreUsuario)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tbCatalogoDeDeducciones.cde_DescripcionDeduccion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tbEquipoEmpleados.eqem_RazonInactivo)
                            </td>
                            <td>
                              @Html.ActionLink("Detalles", "Details", new { id=item.dex_IdDeduccionesExtra },  new {@class = "btn btn-primary btn-xs" })
                              @Html.ActionLink("Editar", "Edit", new { id=item.dex_IdDeduccionesExtra }, new {@class = "btn btn-default btn-xs" })
                            </td>
                        </tr>
                      }
                    </tbody>
                  </table>
                </div>
            </div>
        </div>
    </div>
 </div>
    
@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}

@section Scripts {
  @Scripts.Render("~/plugins/dataTables")
}
