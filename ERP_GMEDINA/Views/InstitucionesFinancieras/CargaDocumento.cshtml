
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/fonts/font-awesome/css/font-awesome.css" rel="stylesheet" />
<link href="~/Content/animate.css" rel="stylesheet" />
<link href="~/Content/plugins/dropzone/basic.css" rel="stylesheet" />
<link href="~/Content/plugins/dropzone/dropzone.css" rel="stylesheet" />
<link href="~/Content/plugins/jasny/jasny-bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/plugins/codemirror/codemirror.css" rel="stylesheet" />
<link href="~/Content/style.css" rel="stylesheet" />

@{
    ViewBag.Title = "CargaDocumento";
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
}

@using (Html.BeginForm("_CargaDocumento", "InstitucionesFinancieras", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="wrapper wrapper-content animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox">
                    <div class="ibox-title">
                        <h2>Carga de Planilla externa de Deduccion </h2>
                    </div>
                    <div class="ibox-content">
                        <div class="row">
                            <div class="col-md-7">
                                <p>Seleccionar Institucion Financiera a la cual sera asignada la planilla:</p>
                                @Html.DropDownList("cboINFS", ViewData["INFS"] as SelectList, "Seleccione una opcion...", new { @class = "select2_demo_3 form-control select2-hidden-accessible" })
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-8 col-md-offset-2">
                                <hr />
                            </div>
                        </div>

                        <div class="row" >
                            <div class="col-md-12">
                                <p>Favor seleccionar planilla externa (Excel), para ser cargada al sistema:</p>
                                <div action="#" class="dropzone" id="dropzoneForm">
                                    <div class="fallback">
                                        <input name="archivoexcel"  id="archivoexcel" type="file" required />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="ibox-footer">
                        <button class="btn btn-primary col-md-offset-5" type="submit"><i class="fa fa-upload"></i>&nbsp;&nbsp;<span class="bold">Cargar Documento</span></button>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- Mainly scripts -->

    <script src="~/Scripts/jquery-2.1.1.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/plugins/metisMenu/metisMenu.min.js"></script>
    <script src="~/Scripts/plugins/slimscroll/jquery.slimscroll.min.js"></script>
    <!-- Custom and plugin javascript -->
    <script src="~/Scripts/app/inspinia.js"></script>
   

    <!-- Jasny -->

    <script src="~/Scripts/plugins/jasny/jasny-bootstrap.min.js"></script>
    <!-- DROPZONE -->

    <script src="~/Scripts/plugins/dropzone/dropzone.js"></script>
    <!-- CodeMirror -->
    <script src="~/Scripts/plugins/codemirror/codemirror.js"></script>
    <script src="~/Scripts/plugins/codemirror/mode/xml/xml.js"></script>

    <script>
        Dropzone.options.dropzoneForm = {
            paramName: "archivoexcel", // The name that will be used to transfer the file
            maxFilesize: 10, // MB
            dictDefaultMessage: "<center><strong>Suelte los archivos aquí o haga clic para cargar.</strong></br></center>"
        };

    </script>
}

