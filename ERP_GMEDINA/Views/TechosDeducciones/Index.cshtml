@model IEnumerable<ERP_GMEDINA.Models.tbTechosDeducciones>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h2>Índice</h2>
        <div class="row">
            <div class="col-md-2">
                <ol class="breadcrumb">
                    <li class="active">
                        @*<strong>tbTechosDeducciones</strong>*@
                    </li>
                </ol>
            </div>
            <div class="col-md-10">
                <button type="button" class="btn btn-primary pull-right animated fadeInRight" id="btnAgregarTechosDeducciones">Nuevo</button>
            </div>
        </div>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Techos de las Deducciones</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li><a href="#">Config option 1</a></li>
                            <li><a href="#">Config option 2</a></li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times">
                            </i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <table class="table table-striped table-bordered table-hover dataTables-example animated fadeInRight" id="tblTechosDeducciones">
                        <thead>
                            <tr role="row">
                                <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 128px;">@Html.DisplayNameFor(model => model.tede_RangoInicial)</th>
                                <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 128px;">@Html.DisplayNameFor(model => model.tede_RangoFinal)</th>
                                <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 128px;">@Html.DisplayNameFor(model => model.tede_Porcentaje)</th>                                                                                                
                                <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 128px;">@Html.DisplayNameFor(model => model.tbCatalogoDeDeducciones.cde_DescripcionDeduccion)</th>
                                <th tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 128px;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody id="tbodyTechosDeducciones">
                            @foreach (var item in Model)
                            {
                                <tr class="gradeA odd" role="row">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tede_RangoInicial)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tede_RangoFinal)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tede_Porcentaje)
                                    </td>                                        
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tbCatalogoDeDeducciones.cde_DescripcionDeduccion)
                                    </td>
                                    <td>
                                        <button type="button" data-id="@item.tede_Id" class="btn btn-primary btn-xs" id="btnEditarTechosDeducciones">Editar</button>
                                        <button type="button" data-id="@item.tede_Id" class="btn btn-default btn-xs" id="btnDetalleTechosDeducciones">Detalle</button>                                        
                                        @*<button type="button" class="btn btn-danger btn-xs" id="btnInactivarTechosDeducciones">Inactivar</button>*@
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr role="row">
                                <th rowspan="1" colspan="1">@Html.DisplayNameFor(model => model.tede_RangoInicial)</th>
                                <th rowspan="1" colspan="1">@Html.DisplayNameFor(model => model.tede_RangoFinal)</th>
                                <th rowspan="1" colspan="1">@Html.DisplayNameFor(model => model.tede_Porcentaje)</th>                                                                                                
                                <th rowspan="1" colspan="1">@Html.DisplayNameFor(model => model.tbCatalogoDeDeducciones.cde_DescripcionDeduccion)</th>
                                <th rowspan="1" colspan="1">Acciones</th>                                
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@* MODAL DE EDICIÓN *@
<div class="modal fade" id="EditarTechosDeducciones" tabindex="-1" role="dialog" aria-hidden="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Edición de datos</h4>
            </div>
            <div class="modal-body" id="Editar">
                @*Mandamos un nuevo modelo solo para poder cargar la página *@
                @Html.Partial("_EditTechosDeducciones", new ERP_GMEDINA.Models.tbTechosDeducciones())
            </div>
            <div class="modal-footer">
                @*data-dismiss="modal"*@                
                <button type="button" class="btn btn-primary" id="btnEditarTecho">Aceptar</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal" id="btnInactivarTechoDeducciones">Inactivar</button>
                <button type="button" class="btn btn-white" id="btnCerrarEditar">Cerrar</button>
            </div>
        </div>
    </div>
</div>
@* MODAL DE CREACIÓN *@
<div class="modal fade" id="AgregarTechosDeducciones" tabindex="-1" role="dialog" aria-hidden="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Agregar datos</h4>
            </div>
            <div class="modal-body" id="Crear">
                @Html.Partial("_CreateTechosDeducciones", new ERP_GMEDINA.Models.tbTechosDeducciones())
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="btnCreateTechoDeducciones">Aceptar</button>                
            </div>
        </div>
    </div>
</div>

@* MODAL DE DETALLES *@
<div class="modal fade" id="DetailsTechosDeducciones" tabindex="-1" role="dialog" aria-hidden="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Detalles del registro</h4>
            </div>
            <div class="modal-body" id="Detalles">
                @Html.Partial("_DetailsTechosDeducciones", new ERP_GMEDINA.Models.tbTechosDeducciones())
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white" data-dismiss="modal">Cerrar</button>                
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/izitoast")
    @Scripts.Render("~/Scripts/app/General/TechosDeducciones")    
}

@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/Content/plugins/izitoast/iziToast")
}
